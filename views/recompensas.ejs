<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Descrição das Recompensas</title>
</head>
<body>
  <h2>Descrição das Recompensas</h2>
  <table border="1">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Critério de Atribuição</th>
      </tr>
    </thead>
    <tbody>
      <% recompensas.forEach(function(recompensa) { %>
        <tr>
          <td><%= recompensa.nome %></td>
          <td><%= recompensa.descrição %></td>
          <td><%= recompensa.critério_atribuição %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <button><a href="/">Back</a></button>
</body>
</html>
