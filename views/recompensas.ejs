<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Descrição das Recompensas</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
    }

    h2 {
      color: #333;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #f2f2f2;
    }

    button {
      background-color: #4caf50;
      color: #fff;
      border: none;
      padding: 10px 20px;
      font-size: 14px;
      cursor: pointer;
      border-radius: 4px;
      margin-top: 20px;
    }

    a {
      color: #fff;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <h2>Descrição das Recompensas</h2>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Critério de Atribuição</th>
      </tr>
    </thead>
    <tbody>
      <% recompensas.forEach(function(recompensa) { %>
        <tr>
          <td><%= recompensa.nome %></td>
          <td><%= recompensa.descrição %></td>
          <td><%= recompensa.critério_atribuição %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <button><a href="/">Voltar</a></button>
</body>
</html>
